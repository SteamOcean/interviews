{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "backend:build",
        "type": "process",
        "command": "dotnet",
        "args": [
          "build",
          "${workspaceFolder}/server/book-review-server/book-review-server.csproj"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "backend:watch",
        "type": "process",
        "command": "dotnet",
        "args": [
          "watch",
          "run",
          "--project",
          "${workspaceFolder}/server/book-review-server/book-review-server.csproj"
        ],
        "problemMatcher": "$msCompile",
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "label": "frontend:install",
        "type": "process",
        "command": "npm",
        "args": ["install"],
        "options":{
            "cwd": "${workspaceFolder}/client/book-review-client"
        }
      },
      {
        "label": "frontend:start",
        "type": "process",
        "command": "npm",
        "args": ["run dev"],
        "isBackground": true,
        "problemMatcher": "$tsc-watch",
        "options": {
            "cwd": "${workspaceFolder}/client/book-review-client"
        }
      }
    ]
}
  